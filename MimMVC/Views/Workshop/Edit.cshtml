@model MimMVC.Models.WorkShop

@{
    ViewData["Title"] = "Edit";
}
<div class="container shadow p-3 rounde" style="background-color: #fafafa;">

	<h4>Redigere WorkShop</h4>

	<div class="row">
		<div class="col-md-10">
			<form asp-action="Edit" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="FileName" />
				<input type="hidden" asp-for="AntalGæster" />
				<input type="hidden" asp-for="TotalTilmeldt" />
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="StartTime" class="control-label"></label>
					<input asp-for="StartTime" class="form-control" />
					<span asp-validation-for="StartTime" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FinishTime" class="control-label"></label>
					<input asp-for="FinishTime" class="form-control" />
					<span asp-validation-for="FinishTime" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="File" class="control-label">Nyt billede</label>
					<input asp-for="File" />
					<img src="" id="imgpreview" alt="" />
					<span asp-validation-for="File" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Gem" class="btn btn-warning" />&nbsp;
					<i class="fas fa-check"></i>
				</div>
			</form>
		</div>
	</div>
	<div>
		<a asp-action="Index">Tilbage</a>
	</div>
</div>	

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
		CKEDITOR.replace("Description");
		$("#ImageUpload").change(function () {
			readURL(this);
		});
</script>
	}
