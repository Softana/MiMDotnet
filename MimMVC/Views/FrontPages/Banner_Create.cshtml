@model MimMVC.Models.FrontPage

@{
    ViewData["Title"] = "Banner Create";
}
<div class="container shadow p-3 rounde" style="background-color: #fafafa;">

	<h4>Opret et nyt Banner</h4>

	<div class="row">
		<div class="col-md-12">
			<form asp-action="Banner_Create" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="BannerContent" class="control-label"></label>
					<textarea asp-for="BannerContent" class="form-control"></textarea>
					<span asp-validation-for="BannerContent" class="text-danger"></span>

					<div class="form-group">
						<label asp-for="ImageFile" class="control-label"></label>
						<br />
						<input asp-for="ImageFile" accept="image/*" />
						@*accept - All images type*@
						<span asp-validation-for="ImageFile" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Gem" class="btn btn-success" />
					</div>

			</form>
		</div>
		<div>
			<a asp-action="Banner_Index">Tilbage</a>
		</div>
	</div>

	

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

		<script>
			CKEDITOR.replace("BannerContent");
		</script>


	}
</div>