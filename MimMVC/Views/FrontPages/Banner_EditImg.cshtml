@model MimMVC.Models.FrontPage

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <h4>Banner</h4>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Banner_Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <img src="@("~/img/layout/banner/" + Model.ImageName)" asp-append-version="true" width="100%" alt="@("~/img/layout/banner/" + Model.ImageName)" />

                </div>
                <div class="form-group">
                    <label>Uplaod nyt Billede</label>
                    <br />
                    <input asp-for="ImageFile" accept="image/*" />
                    @*accept - All images type*@
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Banner_Index">Back to List</a>
    </div>
</div>
