@model IEnumerable<MimMVC.Models.FrontPage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerButtonLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerButtonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstBanner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StikyTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StikyContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StikyContent2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StikyTitle2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BannerContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BannerButtonLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BannerButtonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstBanner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StikyTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StikyContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StikyContent2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StikyTitle2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
