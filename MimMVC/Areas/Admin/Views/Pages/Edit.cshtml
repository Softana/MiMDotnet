@model MimMVC.Models.Page

@{
	ViewData["Title"] = "Redigere siden";
}

<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tilbage til listen" asp-action="Index"><i class="fas fa-backspace"></i>&nbsp;Tilbage</a>

<h4>Redigere siden</h4>

<div class="row">
	<div class="col-md-10">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="Sorting" />

			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Content" class="control-label"></label>
				<textarea asp-for="Content" class="form-control"></textarea>
				<span asp-validation-for="Content" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Gem" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div class="form-group">
	<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tilbage til listen" asp-action="Index"><i class="fas fa-backspace"></i>&nbsp;Tilbage</a>
	<button type="submit" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Tryk for gemme dine indstillinger"><i class="fas fa-check"></i>&nbsp;Gem</button>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	<script>
		CKEDITOR.replace("Content");
	</script>

}
