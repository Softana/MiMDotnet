@model Page

@{
	ViewData["Title"] = "Details";
}
<a class="btn btn-secondary" asp-action="Index"><i class="fas fa-backspace"></i>&nbsp;Tilbage</a>

<h4>Detalier</h4>

<div>

	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Content)
		</dt>
		<dd class="col-sm-10">
			@Html.Raw(Model.Content)
		</dd>

	</dl>
</div>
<div>
	<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tilbage til listen" asp-action="Index"><i class="fas fa-backspace"></i>&nbsp;Tilbage</a>
	<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tryk for at redigere" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i>&nbsp;Redigere</a>
</div>
