<!DOCTYPE html>
  <!-- Main Layout -->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MimMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Testimonials.css" />
    <link rel="stylesheet" href="~/css/aboutus.css" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    @*https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css*@
</head>

<body>
    <header style="margin-bottom:82px; background-color: #fafafa;">
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light navbar border-bottom box-shadow " style="background-color: #fafafa;">
            <div class="container-fluid">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/layout/LOGO.png"></a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="https://www.facebook.com/musikimalling/" title="Facebook" target="_blank"><i class="fab fa-facebook fa-lg"></i></a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.youtube.com/channel/UCg-FMDbT1yyLZLuyN3fWe2g" title="Youtube" target="_blank"><i class="fab fa-youtube fa-lg "></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs_Index">Om os</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Workshop" asp-action="Index">Invitationer</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Practical_Index">Praktisk</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Videos" asp-action="Index">Videoer</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole(MimMVC.WC.AdminRole) || User.IsInRole(MimMVC.WC.TeacherRole) || User.IsInRole(MimMVC.WC.AdminTeacherRole) || User.IsInRole(MimMVC.WC.BankRole) || User.IsInRole(MimMVC.WC.Manager))
                            {
                                <li class="nav-item ">
                                    <a class="nav-link" asp-area="" asp-controller="FrontPages" asp-action="PostNewContent_Index">Opslag</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Invoices" asp-action="Index">Afregning</a>
                                </li>
                            }

                            @if (User.IsInRole(MimMVC.WC.AdminRole) || User.IsInRole(MimMVC.WC.TeacherRole) || User.IsInRole(MimMVC.WC.AdminTeacherRole) || User.IsInRole(MimMVC.WC.BankRole) || User.IsInRole(MimMVC.WC.Manager))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        &nbsp;<i class="fas fa-bars"></i>
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @if (User.IsInRole(MimMVC.WC.AdminRole))
                                        {
                                            <a class="dropdown-item" data-toggle="tooltip" data-placement="top" title="Gå til kategorier" asp-area="Admin" asp-controller="Categories" asp-action="Index">Category</a>
                                            <a class="dropdown-item" data-toggle="tooltip" data-placement="top" title="Gå til produkter" asp-area="Admin" asp-controller="Products" asp-action="Index">Undervisning</a>
                                            <a class="dropdown-item" data-toggle="tooltip" data-placement="top" title="Her kan du se de forskellige roller" asp-area="Admin" asp-controller="Roles" asp-action="Index">Roller</a>
                                        }
                                        @if (User.IsInRole(MimMVC.WC.AdminRole) || User.IsInRole(MimMVC.WC.TeacherRole) || User.IsInRole(MimMVC.WC.AdminTeacherRole) || User.IsInRole(MimMVC.WC.BankRole) || User.IsInRole(MimMVC.WC.Manager))
                                        {
                                            <a class="dropdown-item" data-toggle="tooltip" data-placement="top" title="Tryk for at se alle brugere" asp-area="Admin" asp-controller="Users" asp-action="Index">Brugere</a>
                                            <a class="dropdown-item" data-toggle="tooltip" data-placement="top" title="Her kan du oprette et nyt banner / slider-billede" asp-area="" asp-controller="FrontPages" asp-action="Banner_Index">Banner</a>
                                        }
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <p class=" text-dark">info@musikimalling.dk</p>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav my-2 my-lg-0">
                        <li class="nav-item ">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 mt-5">

        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Kontakt os på e-mail: info@musikimalling.dk
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
