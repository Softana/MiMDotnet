@model string

@{
	ViewData["Title"] = "Opret en rolle";
}

<h4>Opret en rolle</h4>
<div class="container rounded shadow p-3 bg-white rounde mt-3">

	<div class="row">
		<div class="col-md-10">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label class="control-label">Rollenavn</label>
					<input type="text" name="name" class="form-control" />
				</div>

				<div>
					<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tilbage til listen" asp-action="Index"><i class="fas fa-backspace"></i>&nbsp;Tilbage</a>
					@if (User.IsInRole(MimMVC.WC.AdminRole))
					{
						<button type="submit" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Tryk for at gemme rollen"><i class="fas fa-check"></i>&nbsp;Opret</button>
					}
				</div>
			</form>
		</div>
	</div>
</div>



	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
